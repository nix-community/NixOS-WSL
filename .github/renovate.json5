{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':semanticCommitTypeAll(chore)',
    'helpers:pinGitHubActionDigests',
  ],
  labels: [
    'release-exclude',
    'renovate',
  ],
  baseBranches: [
    'main',
    '/^release-.+$/',
  ],
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    extends: [
      'schedule:weekly',
    ],
    automerge: true,
  },
  packageRules: [
    {
      matchBaseBranches: [
        '/^release-.+$/',
      ],
      prPriority: -1,
    },
    {
      matchBaseBranches: [
        '/^release-.+$/',
      ],
      matchManagers: [
        'nix',
      ],
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
      ],
      enabled: false,
    },
    {
      matchBaseBranches: [
        '/^release-.+$/',
      ],
      matchManagers: [
        'cargo',
      ],
      enabled: false,
    },
    {
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      matchPackageNames: [
        '/^actions//',
      ],
    },
    {
      matchBaseBranches: [
        'main',
      ],
      matchUpdateTypes: [
        'pin',
        'pinDigest',
      ],
      groupName: '{{manager}} pin versions',
      automerge: true,
    },
    {
      matchUpdateTypes: [
        'lockFileMaintenance',
      ],
      groupName: '{{manager}} lock file maintenance',
    },
  ],
}
